---
// import components

import MenuIcon from './IconMenu.astro';
interface Props {
  text: string;
  href: string;
  style?: 'principal' | 'secondary' | 'accent';
  isFilled?: boolean;
  target?: boolean;
  svg?: boolean;
  fit?: boolean;
}

const { text, href, style, isFilled, target = true, svg, fit } = Astro.props;
---

<a
  class:list={['link_btn', { filled: isFilled, linkImg: svg, 'w-fit': fit }]}
  href={href}
  target={target ? '_blank' : '_self'}
  data-theme={style}
>
  {svg && <slot />}
  {text}
</a>

<style lang="scss">
  .link_btn {
    background-color: transparent;
    padding: 0.5rem 1rem;
    border-radius: 7px;
    box-shadow: 0 0 2px var(--accent);
    font-weight: 500;
    transition: all 0.25s;
  }

  .link_btn.linkImg {
    display: flex;
    gap: 10px;
  }

  .link_btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 1px 3px var(--accent);
    opacity: 0.86;
  }
  .link_btn.filled {
    background-color: hsl(0, 0%, 93%);
    color: hsl(0, 0%, 5%);
  }

  .link_btn.filled[data-theme='principal'] {
    background-color: var(--accent);
    color: hsl(0, 0%, 95%);
  }
  .link_btn.filled[data-theme='secondary'] {
    background-color: hsl(270, 3%, 88%);
    color: hsl(0, 0%, 16%);
  }
</style>
