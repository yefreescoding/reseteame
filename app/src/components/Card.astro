---
interface Props {
  title: string;
  text: string;
  isAbsolute?: boolean;
}

const { title, text, isAbsolute = false } = Astro.props;
---

<article class:list={['card', { absolute: isAbsolute }]} aria-hidden="false">
  <slot />
  <div>
    <h2 class="card__h2">{title}</h2>
    <p>{text}</p>
  </div>
</article>

<style lang="scss">
  @use '../styless/utils/functions' as *;

  .card {
    background-color: var(--clr-bg);
    box-shadow: 0 0 1px var(--clr-text);
    border-radius: 10px;
    padding: 0.8rem;

    &__h2 {
      margin: 0.5rem 0;
      font-size: clamp(toRem(22), 3vw, toRem(30));
      font-weight: 600;
    }
  }
</style>
<script src="../vanilla-tilt/scripts.js"></script>
